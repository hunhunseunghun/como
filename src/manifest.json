{
  "version": "1.0",
  "manifest_version": 3,
  "name": "COMO",
  "description": "Coin Monitoring",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "defaultcomologo.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "128": "defaultcomologo.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "defaultcomologo.png",
        "defaultcomologo.png"
      ],
      "matches": []
    }
  ],
  "permissions": [],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; script-src-elem 'self' 'unsafe-eval' https://api.upbit.com/v1/market/all?isDetails=false https://api.upbit.com/v1/ticker https://api.bithumb.com/public/ticker/all_krw https://api.bithumb.com/public/ticker/all_btc https://api.bithumb.com/public/transaction_history/ object-src 'self'; "
}
